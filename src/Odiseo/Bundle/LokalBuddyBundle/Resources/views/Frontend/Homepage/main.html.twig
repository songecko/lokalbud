				<img src="{{ asset('bundles/odiseolokalbuddy/img/slides_bg/dummy.png')}}" alt="slidebg1" data-lazyload="http://lorempixel.com/1600/622/city/" data-bgposition="center top" data-bgfit="cover" data-bgrepeat="no-repeat">
			</li>
			<!-- SLIDE 2 -->
			<li data-transition="fade" data-slotamount="7" data-masterspeed="500" data-saveperformance="on" data-title="Slide 2">
