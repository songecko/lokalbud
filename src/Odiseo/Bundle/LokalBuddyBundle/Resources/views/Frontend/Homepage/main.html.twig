				data-easing="Back.easeInOut" data-splitin="none" data-splitout="none" 
				data-elementdelay="0.05" data-endelementdelay="0.1"
				style="z-index: 5; max-width: auto; max-height: auto; white-space: nowrap;"
			>
					Welcome to LOKAL BUDDY
			</div>
			<!-- LAYER NR. 2 -->
			<div class="tp-caption customin tp-resizeme rs-parallaxlevel-0 text-center tp-static-layer" 
				data-x="center" data-y="center" data-hoffset="0" data-voffset="15" 
				data-customin="x:0;y:0;z:0;rotationX:0;rotationY:0;rotationZ:0;scaleX:0;scaleY:0;skewX:0;skewY:0;opacity:0;transformPerspective:600;transformOrigin:50% 50%;"
				data-startslide="0" data-endslide="3" data-speed="500" data-start="2600" 
				data-easing="Power3.easeInOut" data-splitin="none" data-splitout="none" 
				data-elementdelay="0.05" data-endelementdelay="0.1"
				style="z-index: 9; max-width: auto; max-height: auto; white-space: nowrap;"
			>
				<div style="color:#ffffff; font-size:16px; text-transform:uppercase">
					We offer a platform to make local experiences
				</div>
			</div>
			<!-- LAYER NR. 3 -->
			<div class="tp-caption customin tp-resizeme rs-parallaxlevel-0 tp-static-layer" 
				data-x="center" data-y="center" data-hoffset="0" data-voffset="70" 
				data-customin="x:0;y:0;z:0;rotationX:0;rotationY:0;rotationZ:0;scaleX:0;scaleY:0;skewX:0;skewY:0;opacity:0;transformPerspective:600;transformOrigin:50% 50%;" 
				data-startslide="0" data-endslide="3" data-speed="500" data-start="2900" 
				data-easing="Power3.easeInOut" data-splitin="none" data-splitout="none" 
				data-elementdelay="0.1" data-endelementdelay="0.1" 
				style="z-index: 12;"
			>
				<a href="{{ path('odiseo_product_index') }}" class="button_intro">View all experiences</a>
				<a href="#" class=" button_intro outline">How it works</a>
			</div>
			<!-- LAYER NR. 4 -->
			<div class="tp-caption tp-static-layer"
				data-y="bottom" data-start="0" data-startslide="0"
				style="z-index: 20; width: 100%;left: 0;"
			>
				<div id="search_bar_container">
                	<div class="container">
                		<form action="{{ path('odiseo_product_index') }}" method="GET">
                		<div class="search_bar filterType">
                			<ul>
                				{% for productType in productTypes %}
                				<li>
                					<label><input type="checkbox" id="filter_type_{{ productType.id }}" name="filter[type][]" value="{{ productType.id }}"><span>{{ productType.name }}</span></label>
                				</li>
                				{% endfor %}
                			</ul>
                		</div>
						<div class="search_bar">
                            <input style="display:none;" id="townInput" name="filter[town][]"></input>
                            <div class="nav-searchfield-outer" data-autocomplete-options="{{towns}}">
                                <input type="text" autocomplete="off"  placeholder="Where you want share experiences?" id="twotabsearchtextbox">
                            </div>
                            <div class="nav-submit-button">
                                <input type="submit" title="Search" class="nav-submit-input" value="Search">
                            </div>
                        </div><!-- End search bar-->
                        </form>
                    </div>
                </div>
			</div>
		</div>
		<div class="tp-bannertimer tp-bottom"></div>
	</div>
</div>
<!-- End Slider -->
{% endblock %}


