<div class="basicFilters">
	
	
	<div class="row filter"  data-container-for="town-filter-module">
		<div class="col-md-2 filter-label">
			<h6>Town</h6>
		</div>
		<div class="col-md-10 filter-value towns">
			<ul class="clearfix">
			
				{% for town in towns %}
					<li><label><input name="filter[town][]" id="{{'town_'~town.id  }}" value="{{town.id}}" type="checkbox"> {{ town.name }}</label></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	
	
	
	<div class="row filter with-border" data-container-for="type-filter-module">
		<div class="col-md-2 filter-label">
			<h6>Type</h6>
		</div>
		<div class="col-md-10 filter-value types">
			<ul class="clearfix">
			{% for productType in productTypes %}
				<li><label><input name="filter[type][]" id="{{'type_'~productType.id  }}"  value="{{ productType.id }}" type="checkbox"> {{ productType.description }}</label></li>
			{% endfor %}
			</ul>
		</div>
	</div>
	<div class="row filter with-border">
		<div class="col-md-2 filter-label">
			<h6>Price</h6>
		</div>
		<div class="col-md-10 filter-value" data-container-for='filter-price-bar-module'>
			<input type="text" class="slider price-slider" name="filter[price]" value="100,1400" 
				data-slider-max="1500" data-slider-min="0" data-slider-value="[100,1400]" data-slider-tooltip="hide"
			>
			<p class="priceValues clearfix">
				<span class="pull-left min">$100</span>
				<span class="pull-right max">$1400</span>
			</p>
		</div>
	</div>
</div>

