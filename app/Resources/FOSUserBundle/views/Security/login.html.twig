{% extends 'OdiseoUserBundle:Frontend:layout.html.twig' %}

{% block content %}
<section id="hero" class="login">
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
				<div id="login">
					<div class="text-center"><img src="{{ asset('bundles/odiseolokalbuddy/img/logo_sticky.png') }}" alt="" data-retina="true" ></div>
					<hr>
					{% if error %}
						<div class="text-center error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}
					<form action="{{ path("fos_user_security_check") }}" method="post">
						<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
						<div class="row">
							<div class="col-md-6 col-sm-6 login_social">
								<a href="{{ hwi_oauth_login_url('facebook') }}" class="btn btn-primary btn-block"><i class="icon-facebook"></i> Facebook</a>
							</div>
							<div class="col-md-6 col-sm-6 login_social">
								<a href="{{ hwi_oauth_login_url('twitter') }}" class="btn btn-info btn-block "><i class="icon-twitter"></i>Twitter</a>
							</div>
						</div>
						<div class="login-or"><hr class="hr-or"><span class="span-or">or</span></div>
						                       
						<div class="form-group">
							<label>Username</label>
							<input type="text" class="form-control" name="_username" value="{{ last_username }}" placeholder="Username" required="required">
						</div>
						<div class="form-group">
							<label>Password</label>
							<input type="password" class="form-control" name="_password" placeholder="Password" required="required">
						</div>
						<p class="small">
							<a href="{{ path('fos_user_resetting_request') }}">Forgot Password?</a>
						</p>
						<input type="submit" name="_submit" value="Sign in" id="Sign_in" class="btn_full">
						<a href="{{ path('fos_user_registration_register') }}" id="Sign_up" class="btn_full_outline">Register</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
{% endblock %}
